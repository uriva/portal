{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es2021",
    "lib": ["es2021", "DOM"],
    "module": "commonjs",
    "strict": false,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "inlineSources": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts", "./package.json"]
}
